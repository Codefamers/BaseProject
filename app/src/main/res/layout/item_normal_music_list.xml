<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fra_music_list_cover"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/toolbar"
        android:layout_centerVertical="true"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/img_music_list_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_listen_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/txt_gradient_bg"
            android:drawableLeft="@mipmap/ic_ear_phone"
            android:gravity="center|end"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x4"
            android:textColor="@color/alpha_85_white"
            android:textSize="12sp" />


    </FrameLayout>


    <RelativeLayout
        android:id="@+id/rel_music_list_cover"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/fra_music_list_cover">


        <TextView
            android:id="@+id/txt_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:text="【经典配乐】逍遥江湖路，缠绵儿女情"
            android:textColor="@color/alpha_85_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_author_header"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x4"
                android:gravity="center"
                android:text="海上花_402455789"
                android:textColor="@color/alpha_85_white" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
