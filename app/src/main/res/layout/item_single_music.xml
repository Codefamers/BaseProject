<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/iv_is_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_volume_up_black_24dp" />

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/iv_is_play_music"
        android:layout_toRightOf="@id/iv_is_play_music"
        android:textColor="@color/alpha_85_black"
        android:textSize="16sp"
        tools:text="童话镇" />

    <ImageView
        android:id="@+id/iv_is_download_local"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv_is_play_music"
        android:layout_toRightOf="@+id/iv_is_play_music"
        android:src="@drawable/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_is_download_local"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@id/iv_is_download_local"
        android:layout_toEndOf="@id/iv_is_download_local"
        android:textColor="@color/alpha_35_black"
        android:textSize="12sp"
        android:gravity="center"
        tools:text="陈一发儿-童话镇" />


    <ImageView
        android:id="@+id/iv_more_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_more_operation"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />


</RelativeLayout>