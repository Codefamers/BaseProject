<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x8"
    android:layout_marginTop="@dimen/y8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_rank_pic"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_load_fail" />

    <LinearLayout
        android:id="@+id/ll_rank_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginStart="@dimen/x8"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_rank_pic"
        android:layout_toRightOf="@+id/img_rank_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粤语新歌榜"
            android:textColor="@color/alpha_85_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:lineSpacingExtra="@dimen/y4"
            android:textColor="@color/alpha_55_black"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_rank_pic"
        android:src="@drawable/ic_grey_cut_line"
        android:layout_marginTop="@dimen/y4"
        android:layout_alignLeft="@+id/ll_rank_music_name"
        android:layout_alignStart="@+id/ll_rank_music_name" />
</RelativeLayout>