<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_music_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qhn.bhne.baseproject.mvp.ui.activities.MusicListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rel_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/alpha_15_black">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingTop="24dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@mipmap/ic_arrow_back_white_24dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:subtitleTextAppearance="@style/toolbar_subTitle_text"
                app:subtitleTextColor="@color/alpha_35_white"
                app:title="123"
                app:titleTextAppearance="@style/toolbar_title_text"
                app:titleTextColor="@color/white" />

            <FrameLayout
                android:id="@+id/fra_music_list_cover"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_below="@id/toolbar"
                android:layout_centerVertical="true"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/img_music_list_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txt_listen_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/txt_gradient_bg"
                    android:drawableLeft="@mipmap/ic_ear_phone"
                    android:gravity="center|end"
                    android:paddingLeft="@dimen/x24"
                    android:paddingRight="@dimen/x4"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="12sp" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fra_music_list_cover"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/txt_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/list_detail_icn_fav"
                    android:gravity="center"
                    android:text="7280"
                    android:textColor="@color/alpha_85_white" />

                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/list_detail_icn_cmt"
                    android:gravity="center"
                    android:text="129"
                    android:textColor="@color/alpha_85_white" />

                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/list_detail_icn_share"
                    android:gravity="center"
                    android:text="52"
                    android:textColor="@color/alpha_85_white" />

                <TextView
                    android:id="@+id/txt_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/list_detail_icn_dld"
                    android:gravity="center"
                    android:text="下载"
                    android:textColor="@color/alpha_85_white" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_music_list_cover"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_alignTop="@+id/fra_music_list_cover"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/fra_music_list_cover">


                <TextView
                    android:id="@+id/txt_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y8"
                    android:text="【经典配乐】逍遥江湖路，缠绵儿女情"
                    android:textColor="@color/alpha_85_white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_author_header"
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/y24"

                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/txt_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x4"
                        android:gravity="center"
                        android:text="海上花_402455789"
                        android:textColor="@color/alpha_85_white" />

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_song_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/list_icn_play"
                android:drawablePadding="@dimen/x8"
                android:textSize="16sp"
                android:textColor="@color/alpha_85_black"
                android:gravity="center_vertical"
                android:text="播放全部（共114首）" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_icn_mng" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grey_cut_line" />
        <FrameLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_music_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>



    </LinearLayout>
</ScrollView>
