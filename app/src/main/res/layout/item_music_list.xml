<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y4"
    android:layout_marginBottom="@dimen/y4"
    android:layout_marginLeft="@dimen/x8"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_music_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="1"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:textColor="@color/alpha_35_black"
        android:textSize="16sp" />
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x8"

            android:lineSpacingExtra="@dimen/y4"
            android:text="三千世界鸦杀-翻唱\n免裹煎蛋卷-热门华语281"
            android:maxLines="2"
            android:textColor="@color/alpha_15_black"
            android:ellipsize="none"
            android:drawablePadding="4dp"
            android:drawableBottom="@drawable/ic_drawable_cut_line"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/x16"
            android:src="@mipmap/ic_more_operation" />
    </FrameLayout>

</LinearLayout>